@model KoiPond.Repositories.Models.YeuCauThiCong

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header Start -->
<div class="container-fluid page-header">
    <h1 class="display-3 text-uppercase text-white mb-3">Chỉnh Sửa Yêu Cầu Thi Công</h1>
    <div class="d-inline-flex text-white">
        <h6 class="text-uppercase m-0"><a href="">Trang chủ</a></h6>
        <h6 class="text-white m-0 px-3">/</h6>
        <h6 class="text-uppercase text-white m-0">Chỉnh sửa</h6>
    </div>
</div>
<!-- Page Header End -->
<!-- Form Start -->
<div class="container-fluid bg-light py-6 px-5">
    <div class="row gx-5">
        <div class="col-lg-8 offset-lg-2">
            <div class="bg-white text-center p-5">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div class="row g-3">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <input type="hidden" asp-for="MaYeuCau" />
                        <input type="hidden" asp-for="NgayCapNhat"/>

                        <div class="col-12 col-sm-6">
                            <label asp-for="TenKhachHang" class="form-label">Tên khách</label>
                            <input asp-for="TenKhachHang" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="TenKhachHang" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6">
                            <label asp-for="LoaiThietKe" class="form-label">Loại thiết kế</label>
                            <input asp-for="LoaiThietKe" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="LoaiThietKe" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6">
                            <label asp-for="ChiTietYeuCau" class="form-label">Chi tiết yêu cầu</label>
                            <input asp-for="ChiTietYeuCau" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="ChiTietYeuCau" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6">
                            <label asp-for="NgayTao" class="form-label">Ngày tạo</label>
                            <input asp-for="NgayTao" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="NgayTao" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6">
                            <label asp-for="DiaChi" class="form-label">Dịa chỉ</label>
                            <input asp-for="DiaChi" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6">
                            <label asp-for="Sdt" class="form-label">Số điện thoại</label>
                            <input asp-for="Sdt" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="Sdt" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6">
                            <label asp-for="SoLuong" class="form-label">Diện tích/Số lượng</label>
                            <input asp-for="SoLuong" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="SoLuong" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6">
                            <label class="form-label">File đính kèm</label>
                            <input asp-for="FileDinhKem" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;">
                            <span asp-validation-for="FileDinhKem" class="text-danger"></span>

                            @if (!string.IsNullOrEmpty(Model.FileDinhKem))
                            {
                                <div class="mt-2">
                                    <a href="@Url.Content($"~{Model.FileDinhKem}")" target="_blank" class="btn btn-info">View File</a>
                                </div>
                            }
                        </div>


                        <div class="col-12 col-sm-6">
                            <label asp-for="TrangThaiYeuCau" class="form-label">Trạng thái yêu cầu</label>
                            <select asp-for="TrangThaiYeuCau" class="form-control bg-light border-0" style="height: 55px;">
                                <option value="">--Chọn trạng thái--</option>
                                <option value="Đang xử lý">Đang xử lý</option>
                                <option value="Chấp nhận">Chấp nhận</option>
                                <option value="Đang hoàn thiện">Đang hoàn thiện</option>
                            </select>
                            <span asp-validation-for="TrangThaiYeuCau" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6">
                            <label asp-for="PhanHoi" class="form-label">Phản hồi</label>
                            <input asp-for="PhanHoi" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="PhanHoi" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <input type="submit" value="Save" class="btn btn-primary py-3 px-5" />
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Form End -->

<div>
    <a asp-action="Index">Back to List</a>
</div>
