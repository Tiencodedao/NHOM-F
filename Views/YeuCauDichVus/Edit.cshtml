@model KoiPond.Repositories.Models.YeuCauDichVu

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header Start -->
<div class="container-fluid page-header">
    <h1 class="display-3 text-uppercase text-white mb-3">Phản Hồi Yêu Cầu</h1>
    <div class="d-inline-flex text-white">
        <h6 class="text-uppercase m-0"><a href="">Trang chủ</a></h6>
        <h6 class="text-white m-0 px-3">/</h6>
        <h6 class="text-uppercase text-white m-0">Chăm sóc</h6>
    </div>
</div>
<!-- Page Header End -->
<!-- Form Start -->
<div class="container-fluid bg-light py-6 px-5">
    <div class="row gx-5">
        <div class="col-lg-8 offset-lg-2">
            <div class="bg-white text-center p-5">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div class="row g-3">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <input type="hidden" asp-for="MaYeuCau" />

                        <div class="col-12">
                            <label asp-for="TenKhachHang" class="form-label">Tên khách hàng</label>
                            <input asp-for="TenKhachHang" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="TenKhachHang" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="LoaiDichVu" class="form-label">Loại dịch vụ</label>
                            <input asp-for="LoaiDichVu" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="LoaiDichVu" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="NgayYeuCau" class="form-label">Ngày call back</label>
                            <input asp-for="NgayYeuCau" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="NgayYeuCau" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="NgayTao" class="form-label">Ngày tạo</label>
                            <input asp-for="NgayTao" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="NgayTao" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
                            <input asp-for="DiaChi" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="MoTa" class="form-label">Mô tả</label>
                            <input asp-for="MoTa" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="MoTa" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Sdt" class="form-label">Số điện thoại</label>
                            <input asp-for="Sdt" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="Sdt" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="SoLuong" class="form-label">Số lượng</label>
                            <input asp-for="SoLuong" readonly="readonly" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="SoLuong" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6">
                            <label asp-for="MaNhanVien" class="control-label">Nhân viên hỗ trợ</label>
                            <select asp-for="MaNhanVien" class="form-control bg-light border-0" asp-items="ViewBag.MaNhanVien" id="MaNhanVien" style="height: 55px;"></select>
                            <span asp-validation-for="MaNhanVien" class="text-danger"></span>
                        </div>


                        <div class="col-12 col-sm-6">
                            <label asp-for="TrangThaiDichVu" class="form-label">Trạng thái yêu cầu</label>
                            <select asp-for="TrangThaiDichVu" class="form-control bg-light border-0" style="height: 55px;">
                                <option value="">--Chọn trạng thái--</option>
                                <option value="Đang xử lý">Đang xử lý</option>
                                <option value="Chấp nhận">Chấp nhận</option>
                                <option value="Đang hoàn thiện">Đang hoàn thiện</option>
                            </select>
                            <span asp-validation-for="TrangThaiDichVu" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="PhanHoi" class="form-label">Phản hồi</label>
                            <input asp-for="PhanHoi" type="text" class="form-control bg-light border-0" style="height: 55px;" />
                            <span asp-validation-for="PhanHoi" class="text-danger"></span>

                            <div class="form-group mt-4">
                                <input type="submit" value="Save" class="btn btn-primary py-3 px-5" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Form End -->

<div>
    <a asp-action="Index">Back to List</a>
</div>

