@model IEnumerable<KoiPond.Repositories.Models.SanPham>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header Start -->
<div class="container-fluid page-header">
    <h1 class="display-3 text-uppercase text-white mb-3">Sản phẩm</h1>
    <div class="d-inline-flex text-white">
        <h6 class="text-uppercase m-0"><a href="">Trang chủ</a></h6>
        <h6 class="text-white m-0 px-3">/</h6>
        <h6 class="text-uppercase text-white m-0">Quản trị</h6>
        <h6 class="text-white m-0 px-3">/</h6>
        <h6 class="text-uppercase text-white m-0">Sản phẩm</h6>
    </div>
</div>
<!-- Page Header End -->

<div class="container my-4">
    <p>
        <a class="btn btn-primary mb-3" asp-action="Create">Create New</a>
    </p>
    <div class="table-responsive p-3 border rounded">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TenSanPham)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DanhMuc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MoTaSanPham)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoLuongTrongKho)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DuongDanFileMau)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NgayTao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NgayCapNhat)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenSanPham)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DanhMuc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MoTaSanPham)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoLuongTrongKho)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DuongDanFileMau)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayTao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayCapNhat)
                        </td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.MaSanPham">Edit</a>
                            <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.MaSanPham">Details</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.MaSanPham">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
