@model KoiPond.Repositories.Models.SanPham// Update with your actual model namespace

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header Start -->
<div class="container-fluid page-header">
    <h1 class="display-3 text-uppercase text-white mb-3">Sản Phẩm</h1>
    <div class="d-inline-flex text-white">
        <h6 class="text-uppercase m-0"><a href="">Trang chủ</a></h6>
        <h6 class="text-white m-0 px-3">/</h6>
        <h6 class="text-uppercase text-white m-0">Tạo mới sản phẩm</h6>
    </div>
</div>
<!-- Page Header End -->
<!-- Form Start -->
<div class="container-fluid bg-light py-6 px-5">
    <div class="row gx-5">
        <div class="col-lg-4 mb-5 mb-lg-0">
            <div class="mb-4">
                <h1 class="display-5 text-uppercase mb-4">Tạo sản phẩm mới</h1>
            </div>
            <p class="mb-5">Vui lòng điền thông tin đầy đủ của sản phẩm để tạo mới thành công.</p>
            <a class="btn btn-primary py-3 px-5" href="">Learn More</a>
        </div>
        <div class="col-lg-8">
            <div class="bg-white text-center p-5">
                <form asp-action="Create">
                    <div class="row g-3">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <div class="col-12 col-sm-6">
                            <input asp-for="TenSanPham" type="text" class="form-control bg-light border-0" placeholder="Tên sản phẩm" style="height: 55px;" />
                            <span asp-validation-for="TenSanPham" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6">
                            <input asp-for="DanhMuc" type="text" class="form-control bg-light border-0" placeholder="Danh mục" style="height: 55px;" />
                            <span asp-validation-for="DanhMuc" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6">
                            <input asp-for="MoTaSanPham" type="text" class="form-control bg-light border-0" placeholder="Mô tả sản phẩm" style="height: 55px;" />
                            <span asp-validation-for="MoTaSanPham" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6">
                            <input asp-for="Gia" type="text" class="form-control bg-light border-0" placeholder="Giá" style="height: 55px;" />
                            <span asp-validation-for="Gia" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6">
                            <input asp-for="SoLuongTrongKho" type="text" class="form-control bg-light border-0" placeholder="Số lượng trong kho" style="height: 55px;" />
                            <span asp-validation-for="SoLuongTrongKho" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6">
                            <input asp-for="DuongDanFileMau" type="text" class="form-control bg-light border-0" placeholder="Đường dẫn file mẫu" style="height: 55px;" />
                            <span asp-validation-for="DuongDanFileMau" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-6">
                            <input asp-for="NgayCapNhat" type="text" class="form-control bg-light border-0" placeholder="Ngày cập nhật" style="height: 55px;" />
                            <span asp-validation-for="NgayCapNhat" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <input type="submit" value="Create" class="btn btn-primary py-3 px-5" />
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Form End -->
